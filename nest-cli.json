{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/sami8/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/sami8/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/sami8",
  "projects": {
    "sami8": {
      "type": "application",
      "root": "apps/sami8",
      "entryFile": "main",
      "sourceRoot": "apps/sami8/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sami8/tsconfig.app.json"
      }
    },
    "auth-app": {
      "type": "application",
      "root": "apps/auth-app",
      "entryFile": "main",
      "sourceRoot": "apps/auth-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-app/tsconfig.app.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "commerce-app": {
      "type": "application",
      "root": "apps/commerce-app",
      "entryFile": "main",
      "sourceRoot": "apps/commerce-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/commerce-app/tsconfig.app.json"
      }
    },
    "product-app": {
      "type": "application",
      "root": "apps/product-app",
      "entryFile": "main",
      "sourceRoot": "apps/product-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product-app/tsconfig.app.json"
      }
    }
  }
}